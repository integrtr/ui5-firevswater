<mvc:View
  controllerName="integrtr.ui5firevswater.controller.Home"
  displayBlock="true"
  xmlns="sap.m"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:core="sap.ui.core"
>
  <Page showHeader="false">
    <VBox alignItems="Center">
      <Text class="integrtrTitleQuestion sapUiLargeMarginTop" text="{i18n>TITLE_QUES}" />
      <HBox alignItems="Center" class="sapUiLargeMarginTop">
        <FlexBox
          height="150px"
          width="150px"
          alignItems="Center"
          justifyContent="Center"
          class="sapUiMediumMarginTop integrtrPanelBgDark"
        >
          <Image
            src="/assets/Logo_O_RGB.png"
            press="fireLogoPress"
            width="100px"
            decorative="false"
          />
        </FlexBox>
        <Title
          class="sapUiMediumMarginTop sapUiSmallMargin integrtrPanelText"
          level="H2"
          titleStyle="H2"
          text="or"
        />
        <FlexBox
          height="150px"
          width="150px"
          alignItems="Center"
          justifyContent="Center"
          class="sapUiMediumMarginTop integrtrPanelBgLight"
        >
          <Image
            src="/assets/Logo_B_RGB.png"
            press="waterLogoPress"
            width="100px"
            decorative="false"
          />
        </FlexBox>
      </HBox>
    </VBox>
    <footer>
      <Toolbar>
        <Image src="/assets/github_logo.png" width="30px" press="githubLogoPress" />
        <ToolbarSpacer />
        <ToolbarSpacer />
        <Image src="/assets/integrtr_logo.png" width="120px" press="integrtrLogoPress" />
      </Toolbar>
    </footer>

  </Page>
</mvc:View>
