<mvc:View
  controllerName="integrtr.ui5firevswater.controller.Home"
  displayBlock="true"
  xmlns="sap.m"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:core="sap.ui.core"
>
  <Page showHeader="false">
    <FlexBox direction="Column" alignItems="Center">
      <Text class="integrtrTitleQuestion sapUiLargeMarginTop" text="{i18n>TITLE}" />
      <Text class="integrtrTitleQuestion sapUiLargeMarginTopBottom" text="{i18n>TITLE_QUES}" />

      <FlexBox width="100%" justifyContent="Center" alignItems="Center" class="sapUiLargeMarginTop">
        <FlexBox
          direction="Column"
          alignItems="Center"
          class="integrtrPanelBgDark sapUiMediumMarginEnd"
        >
          <Image src="/assets/Logo_O_RGB.png" press="fireLogoPress" width="6rem" />
       </FlexBox>

        <Label text="{i18n>OR}" design="Bold" />

        <FlexBox
          direction="Column"
          alignItems="Center"
          class="integrtrPanelBgLight sapUiMediumMarginBegin"
        >
          <Image src="/assets/Logo_B_RGB.png" press="waterLogoPress" width="6rem" />
        </FlexBox>
      </FlexBox>

    </FlexBox>
    <footer>
      <Toolbar>
        <Image src="/assets/github_logo.png" width="30px" press="githubLogoPress" />
        <ToolbarSpacer />
        <ToolbarSpacer />
        <Image src="/assets/integrtr_logo.png" width="120px" press="integrtrLogoPress" />
      </Toolbar>
    </footer>

  </Page>
</mvc:View>
